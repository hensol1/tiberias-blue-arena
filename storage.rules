rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.email == 'admin@tiberias.com';
    }
    
    // Helper function to check if user is editor or admin
    function isEditorOrAdmin() {
      return isAuthenticated() && 
             (request.auth.token.email == 'admin@tiberias.com' || 
              request.auth.token.email == 'editor@tiberias.com');
    }
    
    // Game images rules
    match /games/{allPaths=**} {
      allow read: if true; // Anyone can view game images
      allow write: if isEditorOrAdmin(); // Only editors and admins can upload/delete
    }
    
    // Default rule - deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 